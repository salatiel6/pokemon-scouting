############################################
# Environment configuration for Pokemon App #
############################################

# Database
# Default uses a local SQLite file in the project root
SQLALCHEMY_DATABASE_URI=sqlite:///pokemon.db

# Upstream API base URL
POKEAPI_BASE_URL=https://pokeapi.co/api/v2

# Seed sync on app start (reads app/db/pokemon_list.csv)
# true | false
SYNC_ON_START=true

# Cache configuration (Flask-Caching)
# CACHE_TYPE can be SimpleCache, NullCache, etc.
CACHE_TYPE=SimpleCache
CACHE_DEFAULT_TIMEOUT=1800

# Data freshness and background sync
STALE_TTL_MINUTES=30
DISABLE_BACKGROUND_SYNC=false
SYNC_INTERVAL_MINUTES=30
REFRESH_BATCH_SIZE=20
